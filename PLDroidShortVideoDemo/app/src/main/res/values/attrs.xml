<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StickerView">
        <attr name="srcBitmap" format="reference" />     <!-- 显示的图片 -->
        <attr name="editable" format="boolean" />         <!-- 是否处于可编辑状态 -->
        <attr name="frameColor" format="color" />         <!-- 边框颜色 -->
        <attr name="frameWidth" format="dimension" />     <!-- 边框线宽度 -->
        <attr name="framePadding" format="dimension" />   <!-- 边框与图片的间距 -->
        <attr name="degree" format="float" />             <!-- 旋转角度 -->
        <attr name="scale" format="float" />              <!-- 缩放比例 -->
        <attr name="controlDrawable" format="reference" /><!-- 控制图标 -->
        <attr name="editDrawable" format="reference" />   <!--编辑图标位置-->
        <attr name="deleteDrawable" format="reference" /> <!--删除图标位置-->
        <attr name="controlLocation">                     <!-- 控制图标的位置 -->
            <enum name="leftTop" value="0" />
            <enum name="rightTop" value="1" />
            <enum name="rightBottom" value="2" />
            <enum name="leftBottom" value="3" />
        </attr>
        <attr name="editLocation">                        <!-- 编辑图标的位置 -->
            <enum name="leftTop" value="0" />
            <enum name="rightTop" value="1" />
            <enum name="rightBottom" value="2" />
            <enum name="leftBottom" value="3" />
        </attr>
        <attr name="deleteLocation">                      <!-- 删除图标的位置 -->
            <enum name="leftTop" value="0" />
            <enum name="rightTop" value="1" />
            <enum name="rightBottom" value="2" />
            <enum name="leftBottom" value="3" />
        </attr>
    </declare-styleable>

</resources>